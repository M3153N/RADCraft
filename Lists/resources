# === Start Menu Icon === REVISAR
wget https://raw.githubusercontent.com/M3153N/resources/refs/heads/main/B4.png && sudo cp B4.png /usr/share/icons/B4.png
sed -i 's|<property name="button-icon" type="string" value="kali-panel-menu"/>|<property name="button-icon" type="string" value="/usr/share/icons/B4.png"/>|' ~/.config/xfce4/xfconf/xfce-perchannel-xml/xfce4-panel.xml && xfce4-panel --restart

# === Wallpaper ===
wget https://raw.githubusercontent.com/M3153N/resources/refs/heads/main/BASE4Sec.png && cp BASE4Sec.png $HOME/.config/BASE4Sec.png
xfconf-query -c xfce4-desktop -p /backdrop/screen0/monitorVirtual1/workspace0/last-image -s "$HOME/.config/BASE4Sec.png"

# === User Icon ===
wget -qO ~/.face https://raw.githubusercontent.com/M3153N/resources/refs/heads/main/.face && chmod 644 ~/.face

