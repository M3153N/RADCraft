# === Start Menu Icon ===
wget https://raw.githubusercontent.com/M3153N/resources/refs/heads/main/B4.png && sudo cp B4.png /usr/share/icons/B4.png
xfconf-query -c xfce4-panel -p /plugins/plugin-1/button-icon --create -t string -s "/usr/share/icons/B4.png"
xfce4-panel --restart

xfce4-panel --restart

# === Wallpaper ===
wget https://raw.githubusercontent.com/M3153N/resources/refs/heads/main/BASE4Sec.png && cp BASE4Sec.png $HOME/.config/BASE4Sec.png
xfconf-query -c xfce4-desktop -p /backdrop/screen0/monitorVirtual1/workspace0/last-image -s "$HOME/.config/BASE4Sec.png"

# === User Icon ===
wget -qO ~/.face https://raw.githubusercontent.com/M3153N/resources/refs/heads/main/.face && chmod 644 ~/.face

# === Fastfetch Logo ===
wget https://raw.githubusercontent.com/M3153N/resources/refs/heads/main/logo.txt && cp logo.txt $HOME/.config/logo.txt

# === Login Background === REVISAR
sudo wget -qO /usr/share/backgrounds/login-background.jpg https://raw.githubusercontent.com/M3153N/resources/refs/heads/main/Kali%20Orange.png
sudo chmod 644 /usr/share/backgrounds/login-background.jpg
(grep -q "background=" /etc/lightdm/lightdm-gtk-greeter.conf && sudo sed -i "s|^background=.*|background=/usr/share/backgrounds/login-background.jpg|" /etc/lightdm/lightdm-gtk-greeter.conf || echo -e "\n[greeter]\nbackground=/usr/share/backgrounds/login-background.jpg" | sudo tee -a /etc/lightdm/lightdm-gtk-greeter.conf)
#sudo systemctl restart lightdm

